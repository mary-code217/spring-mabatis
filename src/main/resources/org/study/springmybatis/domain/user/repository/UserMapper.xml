<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.study.springmybatis.domain.user.repository.UserMapper">
    <insert id="save" parameterType="org.study.springmybatis.domain.user.entity.User">
        INSERT INTO USERS (ID, USERNAME, PASSWORD)
        VALUES (SEQ_USERS.NEXTVAL, #{username}, #{password})
    </insert>

    <select id="findById" parameterType="User">
        SELECT * FROM USERS
        WHERE ID = #{id}
    </select>

    <select id="findByUsername" parameterType="User">
        SELECT * FROM USERS
        WHERE USERNAME = #{username}
    </select>
</mapper>